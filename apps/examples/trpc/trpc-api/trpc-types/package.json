{
  "name": "@saga-soa/trpc-types",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    },
    "./generated": {
      "types": "./dist/generated/index.d.ts",
      "default": "./dist/generated/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "npm run generate && tsup",
    "generate": "npm run generate:schemas && npm run generate:router",
    "generate:schemas": "tsx scripts/generate-schemas.ts",
    "generate:router": "tsx scripts/generate-router.ts",
    "validate": "echo 'Validation script removed - no longer needed'",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@saga/typescript-config": "workspace:*",
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.0.0",
    "@types/node": "^24.0.12",
    "@vitest/coverage-v8": "^1.5.0",
    "glob": "^10.4.5",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "5.8.2",
    "vitest": "^1.5.0"
  }
}