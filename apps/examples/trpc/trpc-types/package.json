{
  "name": "@saga-soa/trpc-types",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./project": {
      "types": "./dist/project/types.d.ts",
      "default": "./dist/project/types.js"
    },
    "./run": {
      "types": "./dist/run/types.d.ts",
      "default": "./dist/run/types.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "pnpm generate-types && tsup",
    "generate-types": "node scripts/generate-all-types.js",
    "validate": "tsx scripts/validate-no-server-imports.ts",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@saga/typescript-config": "workspace:*",
    "@types/node": "^24.0.12",
    "glob": "^10.4.5",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}