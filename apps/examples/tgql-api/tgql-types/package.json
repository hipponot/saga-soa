{
  "name": "@saga-soa/tgql-types",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./generated": {
      "types": "./dist/generated/index.d.ts",
      "default": "./dist/generated/index.js"
    }
  },
  "scripts": {
    "dev": "tgql-codegen watch",
    "build": "pnpm generate && tsup",
    "generate": "tgql-codegen generate",
    "clean": "rm -rf dist generated",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@saga-soa/api-core": "workspace:*",
    "type-graphql": "^2.0.0-rc.2",
    "graphql": "^16.8.1"
  },
  "devDependencies": {
    "@saga-soa/tgql-codegen": "workspace:*",
    "@types/node": "^24.0.12",
    "@vitest/coverage-v8": "^1.5.0",
    "tsup": "^8.5.0",
    "typescript": "5.8.2",
    "vitest": "^1.5.0"
  }
}