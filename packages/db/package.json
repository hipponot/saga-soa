{
  "name": "@saga/soa-db",
  "type": "module",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "clean": "rm -rf dist",
    "prepare": "npm run co:login",
    "preinstall": "npm run co:login",
    "co:login": "export CODEARTIFACT_AUTH_TOKEN=$(aws codeartifact get-authorization-token --domain saga --query authorizationToken --output text) && npm config set //saga-531314149529.d.codeartifact.us-west-2.amazonaws.com/npm/saga_js/:_authToken=$CODEARTIFACT_AUTH_TOKEN"
  },
  "devDependencies": {
    "@saga/soa-config": "1.0.0",
    "@saga/typescript-config": "1.0.0",
    "@types/node": "^24.0.3",
    "mongodb-memory-server": "^10.1.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "inversify": "^6.2.2",
    "mongodb": "^5.7.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.22.2"
  },
  "version": "1.0.0",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./mocks/mock-mongo-provider": {
      "import": "./dist/mocks/mock-mongo-provider.js",
      "require": "./dist/mocks/mock-mongo-provider.js"
    }
  }
}