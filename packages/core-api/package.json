{
  "name": "@hipponot/soa-core-api",
  "version": "0.0.2",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hipponot/saga-soa.git",
    "directory": "packages/core-api"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./gql-controller": {
      "types": "./dist/gql-controller.d.ts",
      "default": "./dist/gql-controller.js"
    },
    "./rest-controller": {
      "types": "./dist/rest-controller.d.ts",
      "default": "./dist/rest-controller.js"
    },
    "./express-server": {
      "types": "./dist/express-server.d.ts",
      "default": "./dist/express-server.js"
    },
    "./express-server-schema": {
      "types": "./dist/express-server-schema.d.ts",
      "default": "./dist/express-server-schema.js"
    },
    "./sectors-controller": {
      "types": "./dist/sectors-controller.d.ts",
      "default": "./dist/sectors-controller.js"
    },
    "./utils/loadControllers": {
      "types": "./dist/utils/loadControllers.d.ts",
      "default": "./dist/utils/loadControllers.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@hipponot/soa-logger": "0.0.1",
    "express": "^4.18.2",
    "fast-glob": "^3.3.3",
    "figlet": "^1.8.1",
    "inversify": "^6.2.2",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.11.2",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@hipponot/soa-typescript-config": "0.0.1",
    "@types/express": "^5.0.3",
    "@types/figlet": "^1.5.8",
    "@types/node": "^24.0.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "typesVersions": {
    "*": {
      "rest-controller": [
        "dist/rest-controller.d.ts"
      ]
    }
  }
}
