#!/usr/bin/env node

// This is a bin stub that runs the bundled CLI version
// It uses the pre-built bundled JavaScript file

import { spawn } from 'node:child_process';
import { fileURLToPath } from 'node:url';
import { dirname, join } from 'node:path';
import { access } from 'node:fs/promises';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Path to the bundled CLI file
const bundledFile = join(__dirname, '..', 'dist', 'cli', 'index.cjs');

// Main execution function
async function main() {
  // Check if bundled file exists
  try {
    await access(bundledFile);
  } catch (error) {
    console.error('❌ Error: Bundled CLI not found. Please run "npm run build" first.');
    console.error(`   Looking for: ${bundledFile}`);
    process.exit(1);
  }

  // Run the bundled CLI directly with Node.js
  const child = spawn('node', [bundledFile, ...process.argv.slice(2)], {
    stdio: 'inherit',
  });

  child.on('error', (error) => {
    console.error('❌ Error executing zod2ts:', error.message);
    process.exit(1);
  });

  child.on('exit', (code) => {
    process.exit(code || 0);
  });
}

main().catch((error) => {
  console.error('❌ Unexpected error:', error);
  process.exit(1);
}); 